@model Test.Model.ViewModels.CatagoryView
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    @Html.ActionLink("Create New", "CatagoryUpdate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Catagory.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Catagory.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Catagory.CreationDate)
        </th>

    </tr>

    @foreach (var item in Model.Catagorys)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "CatagoryUpdate", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }

</table>
